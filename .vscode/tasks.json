// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",

            // "command": "${workspaceFolder}/scripts/osg-cmk-configure.sh",//osg
            "command": "${workspaceFolder}/scripts/osgearth-cmk-configure.sh", //oearth

            "args": [ ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "cmake-build",
            "type": "shell",
            

            // "command": "cmake --build ${workspaceFolder}/build_by_sh/ubuntu/3rd/osg", //osg
            "command": "cmake --build ${workspaceFolder}/build_by_sh/ubuntu/3rd/osgearth", //oearth

            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["cmake-configure"]
        },
        {
            "label": "cmake-build-only",
            "type": "shell",
            // ---- ​使用 --target只编译当前调试的目标（如 osgearth_map)
            // "command": "cd ${workspaceFolder}/build_by_sh/ubuntu/3rd/osg && cmake --build . --config debug --target application_present3D -j10",  //osg
            "command": "cd ${workspaceFolder}/build_by_sh/ubuntu/3rd/osgearth && cmake --build . --config debug --target osgearth_viewer -j10",   //oearth

            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}

